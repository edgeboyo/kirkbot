{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"outDir": "./build",
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	],
	"include": [
		"bot.ts",
		"commands/**/*",
		"jobs/**/*",
		"auth.json",
		"watcherFile.json"
	]
}